{
  "name": "wowvendor-eslint-configs",
  "description": "A set of rules for writing javascript applications",
  "version": "1.0.0",
  "scripts": {
    "test": "run-s test:*",
    "test:code": "jest",
    "test:lint": "eslint .",
    "postinstall": "npm run bootstrap",
    "release": "lerna version --conventional-commits",
    "bootstrap": "lerna bootstrap --hoist --ignore-prepublish"
  },
  "author": "weyheyhey <iweyheyhey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wowvendor/eslint-configs.git"
  },
  "keywords": [
    "style guide",
    "typescript",
    "eslint",
    "config",
    "react",
    "lint"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@wowvendor/commitlint-config": "^1.0.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.5.1",
    "glob": "^7.1.4",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.1",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{md, js, json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
