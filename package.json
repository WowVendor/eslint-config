{
  "name": "wowvendor-eslint-configs",
  "description": "A set of rules for writing javascript applications",
  "version": "1.0.0",
  "scripts": {
    "test": "run-s test:*",
    "test:code": "jest",
    "test:lint": "lerna exec 'npm run test:lint'",
    "postinstall": "npm run bootstrap",
    "prepublishOnly": "lerna exec 'npm test'",
    "release": "lerna version --conventional-commits",
    "bootstrap": "lerna bootstrap --hoist --ignore-prepublish",
    "publish": "lerna publish from-package"
  },
  "author": "weyheyhey <iweyheyhey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wowvendor/eslint-configs.git"
  },
  "keywords": [
    "style guide",
    "typescript",
    "eslint",
    "config",
    "react",
    "lint"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.15",
    "@wowvendor/commitlint-config": "^1.0.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.7.2",
    "glob": "^7.1.6",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
