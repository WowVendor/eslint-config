{
  "name": "wowvendor-eslint-configs",
  "description": "A set of rules for writing javascript applications",
  "version": "1.0.0",
  "scripts": {
    "test": "run-s test:*",
    "test:code": "jest",
    "test:lint": "lerna exec 'npm run test:lint'",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "publish": "lerna publish from-package",
    "release": "lerna version --conventional-commits"
  },
  "author": "weyheyhey <iweyheyhey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wowvendor/eslint-configs.git"
  },
  "keywords": [
    "style guide",
    "typescript",
    "eslint",
    "config",
    "react",
    "lint"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/react": "^17.0.0",
    "@wowvendor/commitlint-config": "^1.0.5",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.14.0",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "typescript": "^4.1.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
